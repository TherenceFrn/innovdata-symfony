

{% extends "base.html.twig" %}

{% block title %}
    {% trans %}Item{% endtrans %}
{% endblock %}

{% block body %}

    <div class="container mt-4">
        <div class="row">

        {% for annonce in annonces %}
            <div class="col-4">
                <div class="card">
                    <div class="card-body">
                        <h5>
                            {{ annonce.Title }}
                        </h5>
                        <p>
                            {{ annonce.Description }}
                        </p>
                        <a href="{{ path('app_annonce_index', {'id': annonce.id}) }}" class="btn btn-primary">{% trans %}View{% endtrans %}</a>
                            </div>
                        </div>
                    </div>
        {% endfor %}
        </div>
    </div>


{% endblock %}

